<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
        <link rel="stylesheet" href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="https://code.iconify.design/iconify-icon/1.0.3/iconify-icon.min.js"></script>
    
        <title>Draft Soal</title>
        <style>

            .sidenav {
            height: 100%;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #013880;
            overflow-x: hidden;
            padding-top: 10px;
            }

            .sidenav a {
            padding: 6px 6px 6px 32px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: block;
            }

            .sidenav a:hover {
            color: #f1f1f1;
            }

            .active, .sidenav a:hover {
            background-color: #A3B5CE;
            color: white;
            }

            .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            }

            @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
            }
         
            .navbar-custom {
                background-color: #013880;
            }
         
            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-text {
                color: whitesmoke;
            }
            .button1 {
                background-color: #013880; 
            }
            .button2 {
                border-color: 5px #013880;
                background-color: white;
                color: #013880;
                cursor: pointer;
            }

            .success {
            border-color: #013880;
            color: #013880;
            }

            .success:hover {
            background-color: #013880;
            color: white;
            }
            div.card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            }               
        </style>
    </head>

<!-- navbar -->
    <nav class="navbar navbar-expand-sm navbar-custom justify-content-end">
        <div class="container-fluid">
            <div class="navbar-header">
            </div>
            <ul class="nav navbar-nav navbar-right">
              <li><a class="nav-link" style="color: whitesmoke"; href="#">Nama Dosen Pengampu</a></li>
                <li class="nav-item">
                    <iconify-icon icon="gridicons:user-circle" style="color: #c3cfd9;" width="35" height="35"></iconify-icon>
                </li>  
            </ul>
          </div>
    </nav>
    <div class="sidenav" >
        <div class="container-fluid">
            <span class="navbar-brand" style="color: whitesmoke"; href="/tampilansoal">
                myITS classroom
            </span>
          </div>
        <a class="nav-link" href="/tampilansoal" style="margin-top: 30px;">Draft Soal</a>
        <a class="nav-link active" href="/tampilanpaketsoal">Ujian</a>
        <a class="nav-link" href="/tampilanbabmateri">Bab Materi</a>
    </div>

    <body class="main" style="background-color: F1F4F5;">
        <div class="container">
            <div class="row pt-3 text-xs font-bold">
                <div class="col-lg-12">
                    <p style="color: #013880;"><a href="/tampilansoal" style="color: #013880;">Draft Soal</a> / <a href="/tampilanpaketsoal" style="color:#013880;">Ujian</a></p>
                </div>
            </div>

            <!-- halaman detail soal ujian -->
            <div class="row mb-3 mt-3">
                <div class="col-lg-10">
                    <h4>Detail Soal Ujian</h4>           
                </div>
                <div class="col-lg-2">
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-lg-12 pt-3" style="background-color: white; border-color: #c3cfd9; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                    <form method="post", action="/paketsoal">
                        <div class="row px-4">
                            <div class="col-lg-7 form-group">
                                <label for="judul" class="font-bold">Judul Ujian :</label>
                                <input type="text" class="form-control" name="judul" id="judul" placeholder="Paket Soal Baru ...">
                            </div>
                            <div class="col-lg-3 form-group">
                                <label for="jumlah_soal" class="font-bold">Jumlah Soal :</label>
                                <input type="number" class="form-control" name="jumlah_soal" id="jumlah_soal" placeholder="Jumlah Soal">
                            </div>
                            <div class="col-lg-2">
                                <button class="btn btn-block button1 float-right mt-8" style="color: whitesmoke;" type="submit">
                                    Simpan <iconify-icon icon="bxs:save" style="color: white;" width="16" height="16"></iconify-icon>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <hr class="mb-8">
            <div class="row">
                <div class="col-lg-8">
                    <h4>Daftar Ujian</h4>           
                </div>
                <div class="col-lg-4">
                    <form method="#" action="#">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Cari ujian">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary bg-white" style="border-color: #c3cfd9" type="submit">
                                    <iconify-icon icon="gg:search" style="color: #c3cfd9;" width="20" height="20"></iconify-icon>
                                </button>
                            </div>
                        </div>
                    </form>          
                </div>
            </div>
            <div class="row px-3">
                <div class="col-lg-12">

                    <% paket_soal.forEach(function(ps){ %>

                    <div class="row mb-2 pl-4 py-2" style="background-color: white; border-width: 2px; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)">
                        <div class="col-sm-5 d-flex align-items-center">
                            <span class="font-bold text-2xl px-2"><%= ps.judul %></span>
                        </div>
                        <div class="col-sm-4 d-flex justify-content-center align-items-center">
                            <span class="font-bold text-base">Kode Ujian : </span><span class="ml-2"><%= ps.kode_paket %></span>
                        </div>
                        <div class="col-sm-3">
                            <div class="row mb-1 d-flex justify-content-center">
                                <a href="/tampilankonfigurasi/<%= ps.id_paket_soal %>" class="btn button2 success" style="width: 180px;">
                                    Lihat Detail Ujian <iconify-icon icon="icon-park-outline:setting-config" style="color: #013880;" width="16" height="16"></iconify-icon>
                                </a>
                            </div>
                            <div class="row d-flex justify-content-center">
                                <a href="/tampilanpaketsoal/<%= ps.id_paket_soal %>" class="btn button1" style="width: 180px; color: whitesmoke;">
                                    Buka <iconify-icon icon="ion:open-outline" style="color: white;" width="16" height="16"></iconify-icon>
                                </a>
                            </div>
                        </div>
                    </div>

                    <% }); %>

                </div>
            </div>
        </div>
    </body>
</html>