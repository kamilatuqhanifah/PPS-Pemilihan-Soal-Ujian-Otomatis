<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
        <link rel="stylesheet" href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"/>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="https://code.iconify.design/iconify-icon/1.0.3/iconify-icon.min.js"></script>
    
        <title>Draft Soal</title>
        
        <style>
            .sidenav {
            height: 100%;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #013880;
            overflow-x: hidden;
            padding-top: 10px;
            }

            .sidenav a {
            padding: 6px 6px 6px 32px;
            text-decoration: none;
            font-size: 18px;
            color: white;
            display: block;
            }

            .sidenav a:hover {
            color: #f1f1f1;
            }

            .active, .sidenav a:hover {
            background-color: #A3B5CE;
            color: white;
            }

            .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            }

            @media screen and (max-height: 450px) {
            .sidenav {padding-top: 15px;}
            .sidenav a {font-size: 18px;}
            }
         
       
            .navbar-custom {
                background-color: #013880;
            }
         
            .navbar-custom .navbar-brand,
            .navbar-custom .navbar-text {
                color: whitesmoke;
            }

            .button1 {
                background-color: #013880; 
            }

            .button2 {
                border-color: 5px #013880;
                background-color: white;
                color: #013880;
                cursor: pointer;
            }

            .success {
            border-color: #013880;
            color: #013880;
            }

            .success:hover {
            background-color: #013880;
            color: white;
            }

            div.card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            text-align: left;
            }
                                 
        </style>           
    </head>
    <!-- navbar -->
    <nav class="navbar navbar-expand-sm navbar-custom justify-content-end">
        <div class="container-fluid">
            <div class="navbar-header">
            </div>
            <ul class="nav navbar-nav navbar-right">
              <li><a class="nav-link" style="color: whitesmoke"; href="#">Nama Dosen Pengampu</a></li>
                <li class="nav-item">
                    <iconify-icon icon="gridicons:user-circle" style="color: #c3cfd9;" width="35" height="35"></iconify-icon>
                </li>  
            </ul>
          </div>
    </nav>
    <div class="sidenav" >
        <div class="container-fluid">
            <span class="navbar-brand" style="color: whitesmoke"; href="/tampilansoal">
                myITS classroom
            </span>
          </div>
        <a class="nav-link active" href="/tampilansoal" style="margin-top: 30px;">Draft Soal</a>
        <a class="nav-link" href="/tampilanpaketsoal">Ujian</a>
        <a class="nav-link" href="/tampilanbabmateri">Bab Materi</a>
    </div>

    <body class="main" style="background-color: F1F4F5;"></body>

    <!-- navbar menu -->
        <div class="container-fluid">
            <div class="container pt-3 text-xs font-bold">
                <p style="color: #013880;"><a href="/tampilansoal" style="color: #013880;">Draft Soal</a></p>
            </div>

    <!-- halaman draft soal -->
            <div class="row px-16">
                <div class="col float" style="margin-left: 50px; margin-top: 20px;">
                    <h4>Draft Soal</h4>
                </div>
            </div>
            <div class="row px-16">
                <div class="col-sm">
                    <a href="/tambahsoal" class="btn button1 float-right" style="color: whitesmoke;">
                        Buat Soal
                    </a>
                    <a href="/tampilanuploadsoal" class="btn button1 float-right mr-5" style="color: whitesmoke;">
                        Unggah Soal
                    </a>
                </div>
                <div class="col-sm" style="margin-right: 100px;">
                    <form method="#" action="">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Cari soal">
                            <div class="input-group-append">
                                <button class="btn btn-outline-secondary bg-white" type="submit">
                                    <iconify-icon icon="gg:search" style="color: #c3cfd9;" width="20" height="20"></iconify-icon>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
    
            <!-- daftar soal -->
            <% exam_questions.forEach(function(q){ %>
            <div class="col-10" style="margin-left: 100px; margin-right: 100px;">
                <div class="card mb-2" style="background-color: white; border-width: 2px">
                    <div class="row">
                        <div class="col-sm-12">
                            <h6 class="text-muted px-3 pt-2"><%= q.pertanyaan %></h6>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="float-right px-3 pb-2">
                                <span class="font-bold text-base">Soal </span><span class="ml-2"><%= q.id_exam_questions %></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="px-3 pt-2">
                                <% if (q.tingkat_kesulitan == 1) { %>
                                    <span class="badge badge-pill badge-success">Mudah</span>
                                <% } else if (q.tingkat_kesulitan == 2) { %>
                                    <span class="badge badge-pill badge-warning">Sedang</span>
                                <% } else if (q.tingkat_kesulitan == 3) { %>
                                    <span class="badge badge-pill badge-danger">Sulit</span>
                                <% } %>
                                <span class="badge badge-pill badge-secondary"><%= q.judul %></span>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="float-right px-3 pb-2">
                                <a href="/soal/<%= q.id_exam_questions %>" class="btn btn-outline-danger btn-sm" style="width: 90px;">
                                    Hapus <iconify-icon icon="mdi:delete" style="color: #d3455b;" width="13" height="13"></iconify-icon>
                                </a>
                                <a href="/tampilansoal/<%= q.id_exam_questions %>" class="btn button2 success btn-sm" style="width: 90px;">
                                    Edit <iconify-icon icon="mdi:edit" style="color: #013880;" width="13" height="13"></iconify-icon>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </body>
</html>